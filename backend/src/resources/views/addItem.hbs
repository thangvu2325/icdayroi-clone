<form
  style="width: 40%; margin-left: auto; margin-right: auto;"
  method="post"
  action="/api/addItem"
>
  <div class="mb-3">

    <label for="inputfilter" class="form-label">Nhập Filter:</label>
    <label for="inputfilter" class="form-label"></label>
    <select
      class="form-select"
      aria-label="Default select example"
      name="filter"
    >
      {{#each data}}
        <option
          style="font-weight: 600;"
          value="{{this.title}}"
        >{{this.title}}</option>
        {{#each this.subFilter}}
          <option value="{{this.subTitle}}">{{this.subTitle}}</option>

        {{/each}}

      {{/each}}
    </select>
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Nhập tên Item</label>
    <input type="text" class="form-control" id="inputItem" name="title" />
  </div>
  <div class="mb-3">
    <label for="inputIMG" class="form-label">IMG URL:</label>
    <input type="text" class="form-control" id="inputIMG" name="img" />
  </div>
  <div class="mb-3">
    <label for="priceInput" class="form-label">IMG Large URL:</label>
    <input type="text" class="form-control" id="priceInput" name="imgLarge" />
  </div>
  <div class="mb-3">
    <label for="InputPrice" class="form-label">Giá:</label>
    <input type="number" class="form-control" id="InputPrice" name="price" />
  </div>
  <div class="mb-3">
    <label for="InputDetail" class="form-label">Detail:</label>
    <input type="text" class="form-control" id="InputDetail" name="detail" />
  </div>
  <div class="mb-3">
    <label for="Inputspecifications" class="form-label">specifications:</label>
    <input
      type="text"
      class="form-control"
      id="Inputspecifications"
      name="specifications"
    />
  </div>
  <div class="mb-3">
    <label for="InputspecificationsIMG" class="form-label">specifications - img:</label>
    <input
      type="text"
      class="form-control"
      id="InputspecificationsIMG"
      name="specificationsImg"
    />
  </div>
  <div class="mb-3">
    <label for="InputCount" class="form-label">Quanty:</label>
    <input type="number" class="form-control" id="InputCount" name="qty" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>